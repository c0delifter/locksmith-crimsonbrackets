<main class="container">
    <br/>
    <h4>Modify password:</h4>
    <div class="row">
        <form method="post" action="<%user.passwords[index].id%>" class="col s12">
            <div class="row">
                <div class="input-field col m6 s12">
                    <input id="password_name" name="password_name" type="text" class="validate" value="<%=user.passwords[index].name%>" autofocus>
                    <label for="password_name">Name:</label>
                </div>

                <div class="input-field col m6 s12">
                    <input id="password" name="password" type="text" class="validate" value="<%=user.passwords[index].password%>">
                    <label for="password">Password:</label>
                </div>
            </div>
        <button type="submit" class="btn">Save Changes</button>&nbsp;<a class="btn" href="/profile">Cancel</a>
        </form>
    </div>
    







</main>
