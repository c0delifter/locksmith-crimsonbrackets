<main class="container">
    <br/>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="message">
            <%= message %>
        </div>
        <% } %>
            <h4>Login:</h4>
            <div class="row">
                <form action="/auth/login" method="post" class="col s12">
                    <div class="row">
                        <div class="input-field col l6 m6 s12">
                            <input placeholder="Username" id="username" name="username" type="text" class="validate" autofocus>
                            <label for="username">Username</label>
                        </div>
                        <div class="input-field col l6 m6 s12">
                            <input id="password" name="password" type="password" class="validate">
                            <label for="last_name">Password</label>
                        </div>
                    </div>
                    <button type="submit" class="btn local-btn">Login</button>&nbsp;
                </form>
            </div>
            <br/>
            <hr>
            <br/>
            <h5>Don't have an account? Click here to register:</h5>
            <br/>
            <a class="btn register-btn" href="/auth/register">Register</a><br/><br/>

            <br/>
            <hr>
            <br/>
            <h5>Alternatively, you can create and/or access your account using either Google+ or Facebook:</h5>
            <br/>
            <a class="btn google-btn" href="/auth/google">Google+</a><br/><br/>
            <a class="btn facebook-btn" href="/auth/facebook">Facebook</a>&nbsp;


</main>
